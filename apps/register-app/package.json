{
  "name": "employee-register-app",
  "version": "1.0.0",
  "author": "Valdryan Ivandito",
  "license": "Apache-2.0",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "nodemon",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "build:mac": "electron-builder --mac",
    "postinstall": "electron-rebuild"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "nfc-pcsc": "^0.8.1"
  },
  "devDependencies": {
    "electron": "^39.2.6",
    "electron-builder": "^24.13.3",
    "electron-rebuild": "^3.2.9",
    "nodemon": "^3.1.11"
  },
  "build": {
    "appId": "com.valdryanivandito.employeeregister",
    "productName": "Employee Register",
    "icon": "assets/icon",
    "asar": true,
    "asarUnpack": [
      "**/*.node"
    ],
    "compression": "maximum",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "src/utils",
        "to": "utils"
      }
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "requestedExecutionLevel": "asInvoker"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "mac": {
      "target": "dmg"
    }
  }
}
